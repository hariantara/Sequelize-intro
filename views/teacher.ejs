<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style>
    table {
      font-family:Gill Sans Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <title>Contact</title>
  </head>

  <body>
  <center><h3>TEACHER INFO</h3><center><br>
  <a href="/teacher/add"><button type="Submit" name="Add">Add New Teacher</button></a>
  <br><br>
  <form action="/teacher" method="POST">
  <center>
  <table>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan='2'></th>
    </tr>
    <% dataTeacher.forEach(teacherData =>{%>
    <tr>
      <td><%= teacherData.id %></td>
      <td><%= teacherData.first_name %></td>
      <td><%= teacherData.last_name %></td>
      <td><%= teacherData.email %></td>
      <td><a href="/teacher/edit/<%=teacherData.id%>"><button type="button" name="Edit">EDIT</button></a></td>
      <td><a href="/teacher/delete/<%=teacherData.id%>"><button type="button" name="Delete">DELETE</button></a></td>
      </tr>
      <%})%>
    </table>
  </center>
    </form>
  </body>
</html>
